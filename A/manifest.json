{
	"manifest_version": 3,
	"version": "1.0",
	"name": "Novus",
	"description": "Analyze suspicious messages in seconds!",
	"icons": {
		"48": "assets/48.png",
		"96": "assets/96.png"
	},
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "index.html",
		"default_title": "Analyze suspicious messages in seconds!"
	},
	"permissions": ["contextMenus", "tabs", "storage", "activeTab", "scripting"]
}
